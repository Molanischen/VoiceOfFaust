fofOscs(NoiseIx,Fund)=
    //this part is to make a different (low)freq modulation for each osc.
    //noises(nrBands,0):smooth(tau2pole(32))
    //"NoiseIx*" is to make ir differen left and right.
    interleave(nrBands,4):
    par(i, nrBands, (fof(Fund,((fofPhaseRand*(noises(nrBands*2,NoiseIx*i)):smooth(tau2pole(32)))))));


//fofvocoder(audio,freq)=(fofCenters,analizer(voice(audio),freq),fofFund(freq)):fofOscs:vocoderMixer:par(i, 2, min(100):max(-100)):WidePanner(fofWidth);

fofvocoder(audio,freq)=
  ((fofFund(freq),fofCenters,analizer(voice(audio),freq),fofSkirts,fofDecays):fofOscs(1):>_*0.125),
  ((fofFund(freq),fofCenters,analizer(voice(audio),freq),fofSkirts,fofDecays):fofOscs(2):>_*0.125)
    ;


