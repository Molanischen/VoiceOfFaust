//-----------------------------------------------
// contants
//-----------------------------------------------

// general:
nrBands                = 16;// Number of bands for the vocoders.
nrOutChan              = 2; // number of outputs
maxNrOutRoutings       = select2(ambisonicsOn,6,3); // the maximum amount of different output routings
ambisonicsOn           = 0; // do we want an ambisonic synth.
ambisonicsOrder        = 3; // order of the ambisonics
outputRoutingEnabled   = 1; // have flexible routing between the bands and the outputs
inputRoutingEnabled    = 0; // have flexible routing between the osclilators and the filters.
para                   = 1; // whether we want a parametric mid
enableGainCompare      = 1; // correct the loudness of the individual bands after they've been created
enableGainScale        = 1; // expand or compress the spectrum: make it more or less resonant
autoQ                  = 1; // enable correction of the filter-Q depending on the distance between the bands
stableFilters          = 1; // 0=unstable band pass filter, 1 = stable bamd pass filter
enableFeedback         = 0; // feedback around the filters of the classicVocoder
enableAutosat          = 0; // put a saturator at the output
enableFilterAutosat    = 1; // put a saturator in the filter of the classicVocoder
doubleOscs             = 1; // whether fofvocoder has nrBands or nrBands*nrOutChan oscilators
enablePitchTracker     = 0; // internal pitch tracker
enablePitchQuantise    = 0; // a simple 'autotune': only chromatic
enableFOFnoise         = 1; // 0 = no noise   and 1 = noise modulates phase
enableFOFnoiseFilter   = 1; // 0 = noise:smooth   and 1 = noise:lowpass
noisesFilterN          = 4; // the order of the noise lowpass
maxOctavation          = 1; // to maximum number of octaves of the fof oscilators
//todo: test or ask about smooth vs line:, efficiency and behaviour
//minline              = 3;       // minimum line time in ms
// MinInputPitch          = 61.7354;	// lowest expected note is a B1
MinInputPitch          = 50;
MaxInputPitch          = 493.6635;// highest expected note is a B4
maxTimeWithoutPitch    = 2*SR;    // longest time the OSC pitch tracker can be silent before we switch to the intenal one. (in samples, so 2*SR is 2 seconds)
maxTimeWithoutFidelity = 265*4 ;  // is 4*6ms @ 44100. the time between 4 fid messages
analizerTop            = 128;     //hslider("anaTop",64,16,128,1);
analizerBottom         = (0.5*pow(2,0.5))+0.0;
