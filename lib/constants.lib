//(   vslider(" [-98]autoQ                 [style:knob] [tooltip: link the Q to the freq]",	0, 0, 1, 0.001));
SRmax = 96000.0;                          // assumed upper limit on sampling rate
vocoderN               = 2;
defaultTop             = 128:pow(0.5);
defaultBottom          = ((0.25*pow(2,0.5))+0.5):pow(0.5);
PTsmooth               = 0.9984;