//pafCenters=     par(i,nrBands,   pow((pow((pafTop/pafBottom),1/15)),i)*pafBottom);
pafCenters =
    VocoderFreqs(pafBottom,pafTop);

pafOscs(Fund)=
    interleave(nrBands,2):
    par(i, nrBands, paf(Fund,pafIndex))
    /*paf(pafCenter16,Fund,pafIndex,pafVol16)*/
    ;


PAFvocoder(audio,freq)=
    (pafFund(freq),pafCenters,analizer(voice(audio),freq)):pafOscs:vocoderMixer:par(i, 2, _*0.25):WidePanner(pafWidth);

